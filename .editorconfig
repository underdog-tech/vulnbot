# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab

# Trailing whitespace can be essential in tests.
[*_test.go]
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2
